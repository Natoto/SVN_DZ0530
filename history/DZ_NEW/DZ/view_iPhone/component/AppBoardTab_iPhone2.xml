<?xml version="1.0" encoding="utf-8" ?>

<template namespace="AppBoardTab_iPhone2" version="1">

    <linear class="wrapper" orientation="h">
		<image id="bg"/>
		<button id="homepage" class="item active">首页</button>
		<button id="forum" class="item">论坛</button>
		<button id="sendhtm" class="item">发帖</button>
        <button id="mine" class="item">我的</button>
    </linear>

    <style type="text/css">
        
        .icon-home {
        image: url(footer_home_icon.png);
        image-selected: url(footer_home_active_icon.png);
		}
        
		#bg {
			background-color: #333;
			image-src: url(tab-bar.png) !important;
			image-mode: fit;
			position: absolute;
			left: 0;
			top: 0;
		}
			
        .wrapper {
			width: 100%;
			height: 100%;
			float: center;
        }

		.item {
			width: 25%;
			height: 100%;
			color: #666;
			font-size: 13px;
			font-weight: lighter;
		}

		.active {
			color: #fff;
			background-image: url(tab-item.png);
		}
		
		@media(device:iOS7)
		{
			#bg {
				alpha: 0.7;
			}

			.item {
				color: #ccc;
				alpha: 0.7;
			}
		
			.active {
				color: #fff;
				alpha: 0.85;
			}
		}

    </style>
</template>
